<div class="w-full flex">
  <div class="w-full mx-auto">

    <%= render @theme %>

    <%= link_to 'Edit this Thematic Area', edit_theme_path(@theme), class: "mt-2 py-3 px-5 bg-gray-200 text-sm inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this Thematic Area', theme_path(@theme), method: :delete, class: "mt-2 py-3 px-5 bg-gray-200 text-sm font-medium" %>
    </div>
    <%= link_to 'Back to Thematic Areas', themes_path, class: "ml-2 py-3 px-5 bg-gray-200 text-sm inline-block font-medium" %>

  </div>
</div>
