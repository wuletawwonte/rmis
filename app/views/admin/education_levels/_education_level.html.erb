<div id="<%= dom_id education_level %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= education_level.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Order key:</strong>
    <%= education_level.order_key %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this education level", education_level, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this education level', edit_education_level_path(education_level), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
