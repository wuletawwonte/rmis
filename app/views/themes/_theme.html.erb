<div class="mt-6 overflow-hidden bg-white shadow w-full" id="<%= dom_id theme %>">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900">Thematic Area Information</h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= theme.title %> details.</p>
  </div>
  <div class="border-t border-gray-200">
    <dl>

      <div class="bg-white-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Title</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= theme.title %></dd>
      </div>

      <div class="bg-white-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Research Center</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= theme.research_center.name %></dd>
      </div>

      <div class="bg-white-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Description</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= theme.description %></dd>
      </div>

    </dl>

    <% if action_name != "show" %>
      <%= link_to "Show this Thematic area", theme, class: "rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>
      <%= link_to 'Edit this Thematic Area', edit_theme_path(theme), class: "rounded-lg py-3 ml-2 px-5 bg-gray-200 inline-block font-medium" %>
      <hr class="mt-6">
    <% end %>

  </div>
</div>
