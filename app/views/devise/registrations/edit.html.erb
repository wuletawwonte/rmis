<h2 class="my-6 text-2xl font-semibold text-gray-700">Update account</h2>

<div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md">


  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%= f.input :first_name %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>
    <%= f.input :sex, as: :radio_buttons, collection: User.sexes.keys %>
    <%= f.input :email, autocomplete: "email" %>

    <%= f.input :password, hint: @minimum_password_length? "#{@minimum_password_length} characters minimum" : false, label: "Password (leave blank if you don't want to change it)" %>
    <%= f.input :password_confirmation %>
    <%= f.input :current_password, required: :true, label: "Current Password (we need your current password to confirm your changes)" %>

    <div class="flex items-start">
      <%= f.button :submit, "Update" %>
      <%= link_to "Back", :back, class: "ml-1 py-2 px-5 bg-gray-200 inline-block font-medium" %>
    </div>

  <% end %>

  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "mt-1 py-2 px-5 bg-gray-200 inline-block font-medium" %>


</div>
