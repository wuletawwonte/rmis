<div class="container mb-12 mx-auto px-4 md:px-28">
    <div class="flex flex-wrap -mx-4 lg:-mx-10">

      <% @calls.each do |call| %>

        <div class="my-1 px-4 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">
            <article class="overflow-hidden shadow-lg bg-white">
                <header class="leading-tight p-2 md:p-4">
                    <h1 class="text-lg leading-6">
                        <%= link_to call.title, call_path(call.id) %>
                    </h1>
                    <p class="text-gray-600 text-xs">
                        Deadline: <b><%= call.deadline.strftime("%b %d, %Y") %></b>
                    </p>
                    <p class="text-gray-600 text-xs">
                        Code: <b><%= call.code %></b>
                    </p>
                </header>

                <footer class="flex items-center justify-between leading-none p-2 md:p-4">
                    <%= link_to "public/calls/#{call.id}", class: "inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:outline-none focus:ring-purple-300" do %>
                        Read more
                        <svg aria-hidden="true" class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    <% end %>
                    <% if Date.today < call.deadline %>
                        <span class="px-2 py-1 text-xs leading-tight text-green-700 bg-green-100 rounded-full">
                            Active
                        </span>
                    <% else %>
                        <span class="px-2 py-1 text-xs leading-tight text-gray-700 bg-gray-100 rounded-full">
                            Inactive
                        </span>
                    <% end %>

                </footer>
            </article>
        </div>

      <% end %>

    </div>
    <%= paginate @calls %>
</div>
