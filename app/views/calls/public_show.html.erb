
<div class="overflow-hidden">
    <div class="max-w-8xl mx-auto">
        <div class="flex px-4 pt-8 pb-10 lg:px-8">
            <%= link_to :back, class: "group flex font-semibold text-sm leading-6 text-slate-700 hover:text-slate-900" do %>
                <svg viewBox="0 -9 3 24" class="overflow-visible mr-3 text-slate-400 w-auto h-6 group-hover:text-slate-600"><path d="M3 0L0 3L3 6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                Go back
            <% end %>
        </div>
    </div>
    
    <div class="px-4 sm:px-6 md:px-8">
        <div class="max-w-3xl mx-auto pb-28">
            <main>
                <article class="relative pt-3">
                    <h1 class="mt-2 text-2xl font-extrabold tracking-tight text-slate-900 md:text-3xl"><%= @call.title %></h1>
                    <div class="text-sm flex justify-between">
                        <time datetime="<%= @call.created_at %>"><%= @call.created_at.strftime('%A, %B %e, %Y') %></time>
                        <p class="text-sm text-slate-700">Code: <%= @call.code %></p>
                    </div>
                    
                    <div class="mt-6">
                        <ul class="flex flex-wrap text-sm leading-6 -mt-6 -mx-5">
                            <li class="flex items-center font-medium whitespace-nowrap px-5 mt-6">
                                <img src="https://static-media-prod-cdn.itsre-sumo.mozilla.net/static/default-FFA-avatar.2f8c2a0592bda1c5.png" alt="" class="mr-3 w-9 h-9 rounded-full bg-slate-50" decoding="async">
                                <div class="text-sm leading-4">
                                    <div class="text-slate-900">
                                        <%= "#{@call.user.first_name} #{@call.user.middle_name}" %>
                                    </div>
                                    <div class="mt-1">
                                        <a href="https://twitter.com/adamwathan" class="text-sky-500 hover:text-sky-600 lowercase"><%= "#{ @call.user.email }" %></a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="mt-12 prose-slate">
                        <%= @call.content %>
                    </div>
                </article>
            </main>
            <footer class="mt-16">
                <div class="relative">
                    <img src="/_next/static/media/blog-post-form@80.92cf987c.jpg" alt="" class="absolute top-px sm:left-auto sm:right-0 left-1/4 max-w-none" decoding="async" width="476">
                    <img src="/_next/static/media/blog-post-form-dark@90.5b274bea.jpg" alt="" class="absolute top-px -left-1/4 sm:left-0 hidden max-w-none" decoding="async" width="1429">
                    <section class="relative py-16 border-t border-slate-200">
                        <h2 class="text-xl font-semibold text-slate-900 tracking-tight">Get all of our updates directly to your&nbsp;inbox.<br>Sign up for our newsletter.</h2>
                        <div class="mt-5 max-w-md">
                            <form action="https://app.convertkit.com/forms/3181881/subscriptions" method="post" class="flex flex-wrap -mx-2">
                                <div class="px-2 grow-[9999] basis-64 mt-3">
                                    <div class="group relative">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" class="w-6 h-full absolute inset-y-0 left-3 text-slate-400 pointer-events-none group-focus-within:text-sky-500"><path d="M5 7.92C5 6.86 5.865 6 6.931 6h10.138C18.135 6 19 6.86 19 7.92v8.16c0 1.06-.865 1.92-1.931 1.92H6.931A1.926 1.926 0 0 1 5 16.08V7.92Z"></path><path d="m6 7 6 5 6-5"></path></svg>
                                        <input type="email" name="email_address" required="" autocomplete="email" aria-label="Email address" class="appearance-none shadow rounded-md ring-1 ring-slate-900/5 leading-5 sm:text-sm border border-transparent py-2 placeholder:text-slate-400 pl-12 pr-3 block w-full text-slate-900 focus:outline-none focus:ring-2 focus:ring-sky-500 bg-white" placeholder="Subscribe via email">
                                    </div>
                                </div>
                                <div class="px-2 grow flex mt-3">
                                    <button type="submit" class="bg-sky-500 flex-auto shadow text-white rounded-md text-sm border-y border-transparent py-2 font-semibold px-3 hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-300">Subscribe</button>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </footer>
        </div>
    </div>
</div>
