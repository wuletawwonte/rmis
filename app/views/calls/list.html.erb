<div class="min-h-full flex items-center justify-center pt-12 pb-5 px-4 sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <h2 class="text-lg font-semibold text-indigo-600">Call for Research</h2>
      <p class="mt-2 text-3xl font-bold leading-8 tracking-tight text-gray-900 sm:text-4xl">A better way to do research</p>

      <div class="flex items-stretch mt-5">
          <input class="bg-white rounded-lg rounded-r-none text-base leading-none text-gray-800 p-2 w-4/5 border border-transparent focus:outline-none focus:border-gray-500" type="email" placeholder="Your Email">
          <button class="w-32 rounded-l-none hover:bg-indigo-600 bg-indigo-700 rounded text-sm font-medium leading-none text-white p-2 uppercase focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700">subscribe</button>
      </div>
      <p class="mt-2 max-w-2xl text-md text-gray-500 lg:mx-auto">Subscribe to get emails when a Call for research is posted.</p>

    </div>
</div>


<div class="container mb-12 mx-auto px-4 md:px-28">
    <div class="flex flex-wrap -mx-4 lg:-mx-10">

      <% @calls.each do |call| %>

        <div class="my-1 px-4 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">
            <article class="overflow-hidden shadow-lg bg-white">
                <header class="leading-tight p-2 md:p-4">
                    <h1 class="text-lg">
                            <%= call.title %>
                    </h1>
                    <p class="text-gray-600 text-sm">
                        Submission Deadline: <%= call.deadline.strftime('%b %d, %Y')%>
                    </p>
                </header>

                <footer class="flex items-center justify-between leading-none p-2 md:p-4">
                    <a href="#" class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:outline-none focus:ring-purple-300">
                        Read more
                        <svg aria-hidden="true" class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    </a>
                    <a class="no-underline text-grey-darker hover:text-red-dark" href="#">
                        <span class="hidden">Like</span>
                        <i class="fa fa-heart"></i>
                    </a>
                </footer>
            </article>
        </div>

      <% end %>

    </div>
    
    <%= paginate @calls %>
</div>
