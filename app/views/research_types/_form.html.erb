<%= simple_form_for research_type, class: "contents" do |form| %>
  <% if research_type.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(research_type.errors.count, "error") %> prohibited this research_type from being saved:</h2>

      <ul>
        <% research_type.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.input :name %>
  <%= form.input :call_based %>

  <%= form.input :max_budget, hint: "The maxmimun budget should be in Ethiopian birr" %>

  <%= form.input :fund_source, as: :radio_buttons, collection: ResearchType.fund_sources, checked: ResearchType.fund_sources.first %>
  <%= form.input :gender, as: :radio_buttons, collection: ResearchType.genders, checked: ResearchType.genders['male_and_female'] %>

  <%= form.input :min_researcher %>
  <%= form.input :max_duration %>
  <%= form.input :possible_extension %>

  <%= form.button :submit, "Create Research Type" %>
  <%= link_to 'Back to research types', research_types_path, class: "inline-flex justify-center py-2 px-4 cursor-pointer border border-transparent shadow-sm text-sm font-medium p-2.5 text-black bg-gray-100" %>

<% end %>
