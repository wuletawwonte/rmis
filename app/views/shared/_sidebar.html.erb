<div class="py-4 text-gray-500 dark:text-gray-400">
  <%= link_to "RMIS", root_path , class: "ml-6 text-lg font-bold text-gray-800 dark:text-gray-200"%>
  <ul class="mt-6">
    <li class="relative px-6 py-3">
      <% if current_page?(root_path) %>
        <%= content_tag(:span, "", class: "absolute inset-y-0 left-0 w-1 bg-purple-600 rounded-tr-lg rounded-br-lg", "aria-hidden" => true ) %>
      <% end %>
      <%= link_to root_path, class: "inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200 text-gray-800 dark:text-gray-100" do %>
        <%= fa_icon "home lg" %>
        <span class="ml-4">Dashboard</span>
      <% end %>
    </li>
  </ul>
  <ul>
    <li class="relative px-6 py-3">
      <% if request.fullpath.start_with?(proposals_path) %>
        <%= content_tag(:span, "", class: "absolute inset-y-0 left-0 w-1 bg-purple-600 rounded-tr-lg rounded-br-lg", aria: 'hidden' ) %>
      <% end %>
      <%= link_to proposals_path, class: "inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200" do %>
        <%= fa_icon "file" %>
        <span class="ml-4">Proposals</span>
      <% end %>
    </li>
    <li class="relative px-6 py-3">
      <% if current_page?(research_types_path) %>
        <%= content_tag(:span, "", class: "absolute inset-y-0 left-0 w-1 bg-purple-600 rounded-tr-lg rounded-br-lg", aria: 'hidden' ) %>
      <% end %>
      <%= link_to research_types_path, class: "inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200" do %>
        <%= fa_icon "bank" %>
        <span class="ml-4">Research Types</span>
      <% end %>
    </li>
    <li class="relative px-6 py-3">
      <% if current_page?(research_centers_path) %>
        <%= content_tag(:span, "", class: "absolute inset-y-0 left-0 w-1 bg-purple-600 rounded-tr-lg rounded-br-lg", aria: 'hidden' ) %>
      <% end %>
      <%= link_to research_centers_path, class: "inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200" do %>
        <%= fa_icon "bank" %>
        <span class="ml-4">Research Centers</span>
      <% end %>
    </li>
    <li class="relative px-6 py-3">
      <% if current_page?(themes_path) %>
        <%= content_tag(:span, "", class: "absolute inset-y-0 left-0 w-1 bg-purple-600 rounded-tr-lg rounded-br-lg", aria: 'hidden' ) %>
      <% end %>
      <%= link_to themes_path, class: "inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200" do %>
        <%= fa_icon "building" %>
        <span class="ml-4">Thematic Areas</span>
      <% end %>
    </li>
    <li class="relative px-6 py-3">
      <button
        class="inline-flex items-center justify-between w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200"
        @click="togglePagesMenu"
        aria-haspopup="true"
      >
        <span class="inline-flex items-center">
          <%= fa_icon 'cog lg' %>
          <span class="ml-4">Settings</span>
        </span>
        <svg
          class="w-4 h-4"
          aria-hidden="true"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
            clip-rule="evenodd"
          ></path>
        </svg>
      </button>
      <template x-if="isPagesMenuOpen">
        <ul
          x-transition:enter="transition-all ease-in-out duration-300"
          x-transition:enter-start="opacity-25 max-h-0"
          x-transition:enter-end="opacity-100 max-h-xl"
          x-transition:leave="transition-all ease-in-out duration-300"
          x-transition:leave-start="opacity-100 max-h-xl"
          x-transition:leave-end="opacity-0 max-h-0"
          class="p-2 mt-2 space-y-2 overflow-hidden text-sm font-medium text-gray-500 rounded-md shadow-inner bg-gray-50 dark:text-gray-400 dark:bg-gray-900"
          aria-label="submenu"
        >
          <li
            class="px-2 py-1 transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200"
          >
            <%= link_to 'Profile', '#', class: 'w-full' %>
          </li>
          <li
            class="px-2 py-1 transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200"
          >
            <%= link_to 'Account', '#', class: 'w-full' %>
          </li>
        </ul>
      </template>
    </li>
  </ul>
  <div class="px-6 my-6">
    <%= link_to new_proposal_path, class: "flex items-center justify-between w-full px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple" do %>
      Create proposal
      <span class="ml-2" aria-hidden="true">+</span>
    <% end %>
  </div>
</div>
