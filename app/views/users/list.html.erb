
<h2 class="my-6 text-2xl font-semibold text-gray-700">
  System Users
</h2>


<div class="w-full mb-8 overflow-hidden rounded-lg shadow-xs">
  <div class="w-full overflow-x-auto">
    <table class="w-full whitespace-no-wrap">
      <thead>
        <tr
          class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b bg-gray-50"
        >
          <th class="px-4 py-3">Client</th>
          <th class="px-4 py-3">Amount</th>
          <th class="px-4 py-3">Status</th>
          <th class="px-4 py-3">Date</th>
        </tr>
      </thead>
      <tbody
        class="bg-white divide-y"
      >
      <% @users.each do |user| %>
        <tr class="text-gray-700">
          <td class="px-4 py-3">
            <div class="flex items-center text-sm gap-2">
              <!-- Avatar with inset shadow -->

              <div class="inline-flex overflow-hidden relative justify-center items-center w-10 h-10 bg-gray-200 rounded-full">
                  <span class="font-medium text-gray-600"><%= user.initials %></span>
              </div>
              
              <div>
                <p class="font-semibold"><%= "#{user.first_name} #{user.middle_name}" %></p>
                <p class="text-xs text-gray-600">
                  <%= user.email %>
                </p>
              </div>
            </div>
          </td>
          <td class="px-4 py-3 text-sm">
            $ 863.45
          </td>
          <td class="px-4 py-3 text-xs">
            <span
              class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-full"
            >
              Approved
            </span>
          </td>
          <td class="px-4 py-3 text-sm">
            6/10/2020
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>