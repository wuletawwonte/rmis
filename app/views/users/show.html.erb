
<div class="w-full flex">
  <div class="w-full mx-auto">

    <%= render @user %>

    <%= link_to 'Edit this research_type', user_path(@user), class: "mt-2 py-3 px-5 bg-gray-200 text-sm inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete this user', user_path(@user), method: :delete, class: "mt-2 py-3 px-5 bg-gray-200 text-sm font-medium" %>
    </div>
    <%= link_to 'Back to users', users_list_path, class: "ml-2 py-3 px-5 bg-gray-200 text-sm inline-block font-medium" %>
  </div>
</div>
