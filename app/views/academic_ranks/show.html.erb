<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @academic_rank %>

    <%= link_to 'Edit', edit_academic_rank_path(@academic_rank), class: "mt-2 rounded-lg py-2 px-5 bg-gray-200 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy', academic_rank_path(@academic_rank), method: :delete, class: "mt-2 rounded-lg py-2 px-5 bg-gray-200 font-medium" %>
    </div>
    <%= link_to 'Back to academic_ranks', academic_ranks_path, class: "ml-2 rounded-lg py-2 px-5 bg-gray-200 inline-block font-medium" %>
  </div>
</div>
