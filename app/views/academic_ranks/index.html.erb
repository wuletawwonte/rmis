
<%= render HeaderSectionComponent.new do %>
  <% if can? :create, AcademicRank %>
    <%= link_to "New academic rank", new_academic_rank_path, class: "px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border rounded-lg border-transparent active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple" %>
  <% end %>
<% end %>

<div class="w-full overflow-hidden rounded-lg shadow-xs">
  <div class="w-full overflow-x-auto">
    <table class="w-full whitespace-no-wrap">
      <thead>
        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b bg-gray-50">
          <th class="px-4 py-3">#</th>
          <th class="px-4 py-3">Name</th>
          <th class="px-4 py-3">Date</th>
          <th class="px-4 py-3">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y">
        <% @academic_ranks.each_with_index do |academic_rank, index| %>
          <tr class="text-gray-700">
            <td class="px-4 py-3 text-sm">  
              <%= index + 1 %>
            </td>
            <td class="px-4 py-3 text-sm">
              <%= link_to academic_rank.name, academic_rank_path(academic_rank) %>
            </td>
            <td class="px-4 py-3 text-sm">
              <%= academic_rank.created_at %>
            </td>
            <td class="px-4 py-3">
              <div class="flex items-center space-x-4 text-sm">
                <%= link_to edit_academic_rank_path(academic_rank) do %>
                  <%= fa_icon "edit 2x" %>
                <% end %>
                <%= button_to academic_rank_path(academic_rank), method: :delete do %>
                  <%= fa_icon "trash 2x" %>
                <% end %>

              </div>
            </td>
          </tr>

        <% end %>
      </tbody>
    </table>
  </div>

  <%= paginate @academic_ranks %>
</div>