<h2 class="my-6 text-2xl font-semibold text-gray-700">My proposal</h2>

<div class="w-full overflow-hidden rounded-lg shadow-sm">
  <div class="w-full overflow-x-auto">
    <table class="w-full whitespace-no-wrap">
      <thead>
        <tr
          class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b bg-gray-50"
        >
          <th class="px-4 py-3">Title</th>
          <th class="px-4 py-3">Status</th>
          <th class="px-4 py-3">Proposal</th>
          <th class="px-4 py-3">Date</th>
          <th class="px-4 py-3">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y">
        <% if @proposals.present? %>
          <% @proposals.each do |proposal| %>
            <tr class="text-gray-700">
              <td class="px-4 py-3 text-sm">
                <%= link_to proposal.title, proposal_path(proposal.id), class: "text-blue-700 font-medium hover:text-blue-800" %>
              </td>
              <td class="px-4 py-3 text-xs">
                <%= status_for proposal %>
              </td>
              <td>
                <%= link_to proposal.attachement_url, target: "_blank", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded-full inline-flex items-center" do %>
                  <svg class="fill-current w-3 h-3 mr-2 text-sm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M13 8V2H7v6H2l8 8 8-8h-5zM0 18h20v2H0v-2z"/></svg>
                  <span class="text-sm">Download</span>
                <% end %>
              </td>
              <td class="px-4 py-3 text-sm">
                <%= proposal.created_at.to_date %>
              </td>
              <td class="px-4 py-3">
                <div class="flex items-center space-x-4 text-sm">
                  <%= link_to fa_icon('edit 2x'), proposal_path(proposal.id), class: "py-2 text-sm text-purple-600 rounded-lg focus:outline-none focus:shadow-outline-gray" %>
                  <%= button_to fa_icon('trash 2x'), proposal_path(proposal.id), method: :destroy, class: "py-2 text-sm text-red-600 rounded-lg focus:outline-none focus:shadow-outline-gray" %>
                </div>
              </td>
            </tr>

          <% end %>
        <% else %>
          <tr class="text-gray-700">
            <td class="px-4 py-3 text-center" colspan="5">No proposal found</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= paginate @proposals %>
</div>

<% if @envitations.present? %>
  <div class="bg-white mt-6 p-4 border-t border-l border-r rounded-5 shadow-sm">
    <h2 class="my-5 text-2xl font-semibold text-gray-700">Envitations</h2>

    <div class="w-full overflow-hidden rounded-lg shadow-xs">
      <div class="w-full overflow-x-auto">
        <table class="w-full whitespace-no-wrap">
          <thead>
            <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b">
              <th class="px-4 py-3">Title</th>
              <th class="px-4 py-3">My Status</th>
              <th class="px-4 py-3">Proposal</th>
              <th class="px-4 py-3">Date</th>
              <th class="px-4 py-3">Actions</th>
            </tr>
          </thead>
          <tbody
            class="bg-white divide-y"
          >
            <% @envitations.each do |envitation| %>
              <tr class="text-gray-700">
                <td class="px-4 py-3 text-sm">
                  <%= link_to proposal_path(envitation.proposal.id) do %>
                    <p class="font-semibold"><%= envitation.proposal.title %></p>
                    <p class="text-xs text-gray-600 mt-2">
                      <%= status_for envitation.proposal %>
                    </p>
                  <% end %>
                </td>
                <td class="px-4 py-3 text-xs">
                  <%= content_tag(:span, envitation.status, class: "px-2 py-1 font-semibold leading-tight text-orange-700 bg-orange-100 rounded-full") %>
                </td>
                <td>
                  <%= link_to envitation.proposal.attachement_url, target: "_blank", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded-full inline-flex items-center" do %>
                    <svg class="fill-current w-3 h-3 mr-2 text-sm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M13 8V2H7v6H2l8 8 8-8h-5zM0 18h20v2H0v-2z"/></svg>
                    <span class="text-sm">Download</span>
                  <% end %>
                </td>
                <td class="px-4 py-3 text-sm">
                  <%= envitation.proposal.created_at.to_date %>
                </td>
                <td class="px-4 py-3">
                  <div class="flex items-center space-x-2 text-sm">
                    <%= link_to "Accept", accept_envitation_path(envitation.proposal, envitation, status: Member.statuses[:joined]), class: "bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 hover:border-blue-500 rounded-full" %>
                    <%= link_to "Decline", "", class: "bg-orange-500 hover:bg-orange-400 text-white font-bold py-2 px-4 hover:border-orange-500 rounded-full" %>
                  </div>
                </td>
              </tr>

            <% end %>

          </tbody>
        </table>
      </div>

      <%= paginate @proposals %>
    </div>
  </div>
<% end %>