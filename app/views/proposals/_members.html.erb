<%= turbo_frame_tag "members" do %>
  <table class="w-full whitespace-no-wrap">
    <thead>
      <tr
        class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b">
        <th class="px-4 py-3">Researcher</th>
        <th class="px-4 py-3">Role</th>
        <th class="px-4 py-3">Status</th>
        <th class="px-4 py-3">Date</th>
        <th class="px-4 py-3">Actions</th>
      </tr>
    </thead>
    <tbody
      class="bg-white divide-y">
      <% members.each do |member| %>
        <tr class="text-gray-700">
          <td class="px-4 py-3">
            <div class="flex items-center text-sm">
              <!-- Avatar with inset shadow -->
              <%= avatar_for member.user, size: 8, div_class: "mr-3" %>

              <div>
                <p class="font-semibold"><%= member.user.full_name %></p>
                <p class="text-xs text-gray-600">
                  <%= member.user.email %>
                </p>
              </div>
            </div>

          </td>
          <td class="px-4 py-3 text-xs">
            <%= content_tag(:span, member.role, class: "px-2 py-1 font-semibold leading-tight text-gray-700 bg-gray-100 rounded-full") %>
          </td>

          <td class="px-4 py-3 text-xs">
            <%= member_status_for member %>
          </td>

          <td class="px-4 py-3 text-sm">
            <%= member.created_at.to_date %>
          </td>

          <td class="px-4 py-3">
            <div class="flex items-center space-x-4 text-sm">
              <%= link_to icon("fas", "edit 2x"), proposal_path(member.id), html: {class: "flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg focus:outline-none focus:shadow-outline-gray"} %>
              <%= button_to icon("fas", "trash 2x"), proposal_path(member.id), method: :destroy, html: {class: "flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg focus:outline-none focus:shadow-outline-gray"} %>
            </div>
          </td>
        </tr>

      <% end %>

    </tbody>
  </table>

  <%= paginate members %>
<% end %>
