<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>

<li>
  <%= link_to page, url, {remote: remote, rel: page.rel, class: "py-2 px-3 #{"leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700" unless page.current?} #{"text-white bg-purple-500 border border-gray-300 hover:bg-purple-600 hover:text-white" if page.current?} "} %>
</li>
